<!doctype html>
<html lang="en-US">
  <head>
    <title>Mahno App</title>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="//fonts.googleapis.com/css?family=PT+Sans">
  </head>
  <body>
    <header>
      <div>
        <%== yield_content :header_links %>
      </div>
    </header>
    <% if session[:success] %>
      <div>
        <p><%= session.delete(:success) %></p>
      </div>
    <% end %>
    <% if session[:error] %>
      <div>
        <p><%= session.delete(:error) %></p>
      </div>
    <% end %>
    <main>
      <%== yield %>
    </main>
  </body>
</html>
