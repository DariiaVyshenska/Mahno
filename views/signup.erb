<form action="/signup" method="POST">
  <div>
    <label for='first_name'>First name:</label>
    <input type='text' name="first_name" id="first_name" required value=<%= params[:first_name] %> >*
  </div>
  <div>
    <label for='second_name'>Second name:</label>
    <input type='text' name="second_name" id="second_name" required value=<%= params[:second_name] %> >*
  </div>
  <br>
  <div>
    <label for="user_email">User's email:</label>
    <input type="email" name="user_email" id="user_email" required value=<%= params[:user_email] %> >*
  </div>
  <br>
  <div>
    <label for="user_phone">User's phone number:</label>
    <input type="text" name="user_phone" id="user_phone" value=<%= params[:user_phone] %> >
  </div>
  <br>
  <div>
    <label for="user_location">User's location:</label>
    <input type="text" name="user_location" id="user_location" value=<%= params[:user_location] %> >
  </div>
  <br>
  <div>
    <label for="password1">Password:</label>
    <input type="password" name="password1" id="password1" required >*
  </div>
  <div>
    <label for="password2">Repeat Password:</label>
    <input type="password" name="password2" id="password2" required>*
  </div>
  <br>
  <p>* - mandatory fields.</p>
  <button type="submit">Sign up</button>
</form>
